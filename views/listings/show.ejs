<% layout('layouts/boilerplate') %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3><%= listing.title %> </h3>
        </div>
    <div class="card col-6 offset-3 show-card listing-card">

    <img src="<%= listing.image%>" class="card-img-top show-img" alt="listing_image">

  <div class="card-body">
    <p class="card-text"><i>Posted By <%= listing.owner.username%></i></p>
    <p class="card-text"><%= listing.description %> </p>
    <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
    <p class="card-text"><%= listing.location %> </p>
    <p class="card-text"><%= listing.country %> </p> 
  </div>
    </div>

    <!-- <ul>
        <li>Title: <%= listing.title %></li>
        <li>Description: <%= listing.description %></li>
        <li>Price: &#8377; <%= listing.price.toLocaleString("en-IN") %> per night</li>
        <li>Location: <%= listing.location %></li>
        <li>Country: <%= listing.country %></li>
    </ul> -->
    <br> 
    </div>

    <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="btns">
        <a href="/listings/<%=listing.id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
        <form action="/listings/<%=listing._id%>?_method=DELETE" method="POST">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
    <% } %>

    <br>
    <hr>
    
    <div class="row mt-3 mb-3">
        <div class="col-8 offset-3 mt-3 mb-3">
            <% if (!currUser) { %>
                <h5>Please <a href="/login">login</a> to add a review.</h5>
            <% } else { %>

            <h3>Add a Review:</h3>
            
        <form action ="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
            <div class="form-group mt-3 mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" class="form-control-range" id="rating" name="review[rating]" min="1" max="5">
            </div>
            <br>
            <div class="form-group" class="row mt-3 mb-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea class="form-control" id="comment" name="review[comment]" rows="3" required></textarea>
                <div class="invalid-feedback">Please add some comments for review</div>
            </div>

            <div class="form-group mt-3 mb-3">
            <button type="submit" class="btn btn-outline-dark">Submit Review</button>
            </div>
        </form>
        <% } %>

        <hr>

        <p><b> All Reviews </b></p>
        <div class="row">
          <% for(review of listing.reviews) { %>
            <div class="card col-5 mb-3 ms-3" >
                <div class="card-body">
                    <h5 class="card-title">@<%= review.author.username%></h5>
                    <p class="card-text"><%= review.comment %></p>
                    <p class="card-text"><%= review.rating %> Stars</p>
                </div>
                <form class= "mb-3" action ="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST"> 
                    <button class="btn btn-sm btn-dark">Delete</button>
                </form>
            </div>
         <% } %>
        </div>  

        </div>
    </div>

</body>